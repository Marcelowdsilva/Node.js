<%- include ('partials/header.ejs') %>
<%- include ('partials/homenavbar.ejs') %>
<body>
    <div class="container">
        <hr>
        <div class="jumbotron">
            <h1 class="display-4">Bem Vindo</h1>
            <p class="lead">Blog para você </p>
            <hr class="my-4">
            <p>Blog com intuito de divulgar principais artigos referente a área de programação</p>
            <a href="#" class="btn btn-primary btn-lg" role="button">Leia mais</a>
        </div>
    <% articles.forEach(article =>{ %>
            <div class="card">
                <div class="card-header">
                    <h2><%= article.title %> </h2>
                </div>
                <div class="card-body">
                    <a href="/<%= article.slug %> " class="btn btn-success">Ler artigo</a>
                </div>
            </div>
            <br>
        <% }) %> 
    </div>
</body>
