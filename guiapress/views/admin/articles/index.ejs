<%- include('../../partials/header.ejs') %>
<%- include('../../partials/navbar.ejs') %>
<div class="container">
    <hr>
    <h2>Categorias</h2>
    <a href="/admin/articles/new" class="btn btn-success">Criar novo artigo</a>
    <hr>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titulo</th>
                <th>Slug</th>
                <th>Category</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            <% articles.forEach(article =>{ %>
                <tr>
                    <td><%= article.id %> </td>
                    <td><%= article.title %> </td>
                    <td><%= article.slug %> </td>
                    <td><%= article.category.title%> </td>
                    <td>
                        <form action="/articles/delete" method="POST" style="display:inline" onsubmit="confirmaDeletar(event, this)">
                            <input type="hidden" name="id" value="<%= article.id %> ">
                            <button class="btn btn-danger" >Deletar</button>
                        </form>
                    </td>
                </tr>
           <% }) %> 
            
        </tbody>
    </table>
</div>

<%- include('../../partials/footer.ejs') %>

<script> 

    function confirmaDeletar(event,form){
        event.preventDefault()
        let decision = confirm("Você quer deletar esse Artigo?")
            if(decision){
            form.submit()
        }
} </script>